{
  "manifest_version": 3,
  "name": "Quick Search Popup",
  "version": "1.1",
  "description": "Quick search for selected text with a popup showing results.",
  "permissions": ["contextMenus", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
