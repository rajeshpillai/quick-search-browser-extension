{
  "manifest_version": 3,
  "name": "Quick Search Popup",
  "version": "1.0",
  "description": "Quick search for selected text with a popup window showing results.",
  "permissions": [
    "contextMenus",    
    "storage",         
    "activeTab",       
    "windows",
    "system.display"  
  ],
  "host_permissions": [
    "*://*/*"         
  ],
  "background": {
    "service_worker": "background.js"  
  },
  "action": {
    "default_popup": "popup.html"     
  },
  "icons": {
    "48": "icons/icon48.png"
  }
}
